<Window x:Class="StudyPortal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudyPortal"
        mc:Ignorable="d"
        Title="Education Portal" Height="760" Width="1180"
        WindowStartupLocation="CenterScreen"
        Loaded="MainWindow_Loaded">
    <Grid>
        <TabControl Margin="10">
            <TabItem Header="Courses">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="340" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Course search" FontWeight="SemiBold" />
                            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                <TextBox Name="CourseSearchTextBox" Width="200" Margin="0,0,6,0" />
                                <Button Name="SearchCourseButton" Content="Search" Width="60"
                                        Click="SearchCourseButton_Click" />
                                <Button Name="ResetCourseSearchButton" Content="Reset" Width="60" Margin="6,0,0,0"
                                        Click="ResetCourseSearchButton_Click" />
                            </StackPanel>

                            <Separator Margin="0,12,0,12" />

                            <TextBlock Text="Course name" />
                            <TextBox Name="CourseNameTextBox" />

                            <TextBlock Text="Duration (hours)" Margin="0,8,0,0" />
                            <TextBox Name="DurationTextBox" />

                            <TextBlock Text="Teacher" Margin="0,8,0,0" />
                            <ComboBox Name="CourseTeacherComboBox"
                                      DisplayMemberPath="teacher_name"
                                      SelectedValuePath="teacher_id" />

                            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                <Button Content="Add" Width="70" Margin="0,0,6,0"
                                        Click="AddCourseButton_Click" />
                                <Button Content="Update" Width="70" Margin="0,0,6,0"
                                        Click="UpdateCourseButton_Click" />
                                <Button Content="Delete" Width="70" Margin="0,0,6,0"
                                        Click="DeleteCourseButton_Click" />
                                <Button Content="Clear" Width="70"
                                        Click="ClearCourseFormButton_Click" />
                            </StackPanel>

                            <Button Content="View students in course" Margin="0,12,0,0"
                                    Click="OpenCourseStudentsWindow_Click" />
                        </StackPanel>
                    </ScrollViewer>

                    <DataGrid Name="CoursesDataGrid" Grid.Column="1" AutoGenerateColumns="False"
                              IsReadOnly="True" SelectionMode="Single"
                              SelectionChanged="CoursesDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding course_id}" Header="ID" Visibility="Collapsed" />
                            <DataGridTextColumn Binding="{Binding course_name}" Header="Course" Width="*" />
                            <DataGridTextColumn Binding="{Binding duration}" Header="Duration (h)" Width="120" />
                            <DataGridTextColumn Binding="{Binding teacher_id}" Header="Teacher Id" Visibility="Collapsed" />
                            <DataGridTextColumn Binding="{Binding teacher_name}" Header="Teacher" Width="200" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Students">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="340" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="First name" />
                            <TextBox Name="StudentFirstNameTextBox" />

                            <TextBlock Text="Last name" Margin="0,8,0,0" />
                            <TextBox Name="StudentLastNameTextBox" />

                            <TextBlock Text="Email" Margin="0,8,0,0" />
                            <TextBox Name="StudentEmailTextBox" />

                            <TextBlock Text="Course" Margin="0,8,0,0" />
                            <ComboBox Name="StudentCourseComboBox"
                                      DisplayMemberPath="course_name"
                                      SelectedValuePath="course_id" />

                            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                <Button Content="Add" Width="70" Margin="0,0,6,0"
                                        Click="AddStudentButton_Click" />
                                <Button Content="Update" Width="70" Margin="0,0,6,0"
                                        Click="UpdateStudentButton_Click" />
                                <Button Content="Delete" Width="70" Margin="0,0,6,0"
                                        Click="DeleteStudentButton_Click" />
                                <Button Content="Clear" Width="70"
                                        Click="ClearStudentFormButton_Click" />
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <DataGrid Name="StudentsDataGrid" Grid.Column="1" AutoGenerateColumns="False"
                              IsReadOnly="True" SelectionMode="Single"
                              SelectionChanged="StudentsDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding student_id}" Header="ID" Visibility="Collapsed" />
                            <DataGridTextColumn Binding="{Binding first_name}" Header="First Name" Width="160" />
                            <DataGridTextColumn Binding="{Binding last_name}" Header="Last Name" Width="160" />
                            <DataGridTextColumn Binding="{Binding email}" Header="Email" Width="200" />
                            <DataGridTextColumn Binding="{Binding course_id}" Header="Course Id" Visibility="Collapsed" />
                            <DataGridTextColumn Binding="{Binding course_name}" Header="Course" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Teachers">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="340" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="First name" />
                            <TextBox Name="TeacherFirstNameTextBox" />

                            <TextBlock Text="Last name" Margin="0,8,0,0" />
                            <TextBox Name="TeacherLastNameTextBox" />

                            <TextBlock Text="Subject" Margin="0,8,0,0" />
                            <TextBox Name="TeacherSubjectTextBox" />

                            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                <Button Content="Add" Width="70" Margin="0,0,6,0"
                                        Click="AddTeacherButton_Click" />
                                <Button Content="Update" Width="70" Margin="0,0,6,0"
                                        Click="UpdateTeacherButton_Click" />
                                <Button Content="Delete" Width="70" Margin="0,0,6,0"
                                        Click="DeleteTeacherButton_Click" />
                                <Button Content="Clear" Width="70"
                                        Click="ClearTeacherFormButton_Click" />
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <DataGrid Name="TeachersDataGrid" Grid.Column="1" AutoGenerateColumns="False"
                              IsReadOnly="True" SelectionMode="Single"
                              SelectionChanged="TeachersDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding teacher_id}" Header="ID" Visibility="Collapsed" />
                            <DataGridTextColumn Binding="{Binding first_name}" Header="First Name" Width="200" />
                            <DataGridTextColumn Binding="{Binding last_name}" Header="Last Name" Width="200" />
                            <DataGridTextColumn Binding="{Binding subject}" Header="Subject" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Materials">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="340" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Course" />
                            <ComboBox Name="MaterialCourseComboBox"
                                      DisplayMemberPath="course_name"
                                      SelectedValuePath="course_id" />

                            <TextBlock Text="File" Margin="0,8,0,0" />
                            <TextBox Name="MaterialFilePathTextBox" IsReadOnly="True" />

                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Button Content="Choose file" Width="100" Margin="0,0,6,0"
                                        Click="ChooseMaterialFileButton_Click" />
                                <Button Content="Attach" Width="70" Margin="0,0,6,0"
                                        Click="AttachMaterialButton_Click" />
                                <Button Content="Delete" Width="70" Margin="0,0,6,0"
                                        Click="DeleteMaterialButton_Click" />
                                <Button Content="Clear" Width="70"
                                        Click="ClearMaterialFormButton_Click" />
                            </StackPanel>

                            <Button Content="Open file" Margin="0,10,0,0"
                                    Click="OpenMaterialFileButton_Click" />
                        </StackPanel>
                    </ScrollViewer>

                    <DataGrid Name="MaterialsDataGrid" Grid.Column="1" AutoGenerateColumns="False"
                              IsReadOnly="True" SelectionMode="Single"
                              SelectionChanged="MaterialsDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding material_id}" Header="ID" Visibility="Collapsed" />
                            <DataGridTextColumn Binding="{Binding course_id}" Header="Course Id" Visibility="Collapsed" />
                            <DataGridTextColumn Binding="{Binding course_name}" Header="Course" Width="200" />
                            <DataGridTextColumn Binding="{Binding file_name}" Header="File name" Width="200" />
                            <DataGridTextColumn Binding="{Binding file_path}" Header="Stored path" Width="*" />
                            <DataGridTextColumn Binding="{Binding uploaded_at}" Header="Uploaded" Width="160" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
