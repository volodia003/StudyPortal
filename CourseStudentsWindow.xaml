<Window x:Class="StudyPortal.CourseStudentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudyPortal"
        mc:Ignorable="d"
        Title="Students in Course" Height="420" Width="720"
        WindowStartupLocation="CenterOwner"
        Loaded="CourseStudentsWindow_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Course" VerticalAlignment="Center" />
            <ComboBox Name="CourseFilterComboBox" Width="300" Margin="8,0,0,0"
                      DisplayMemberPath="course_name"
                      SelectedValuePath="course_id"
                      SelectionChanged="CourseFilterComboBox_SelectionChanged" />
        </StackPanel>

        <DataGrid Name="CourseStudentsDataGrid" Grid.Row="1" AutoGenerateColumns="False"
                  IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding student_id}" Header="ID" Visibility="Collapsed" />
                <DataGridTextColumn Binding="{Binding first_name}" Header="First Name" Width="180" />
                <DataGridTextColumn Binding="{Binding last_name}" Header="Last Name" Width="180" />
                <DataGridTextColumn Binding="{Binding email}" Header="Email" Width="220" />
                <DataGridTextColumn Binding="{Binding course_name}" Header="Course" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
